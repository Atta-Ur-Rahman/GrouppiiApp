<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/widget_margin_left_right"
    android:background="@drawable/top_side_round_conner">

    <TextView
        android:id="@+id/tvEditTrip"
        android:layout_marginTop="8dp"
        android:text="Edit trip settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/edit"
        app:drawableStartCompat="@mipmap/edit" />

    <TextView
        android:id="@+id/tvManageParticipants"
        android:text="Manage participants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditTrip"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/manage_participants"
        app:drawableStartCompat="@mipmap/manage_participants" />

    <TextView
        android:id="@+id/tvManageBooking"
        android:text="Manage booking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvManageParticipants"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/manage_bookings"
        app:drawableStartCompat="@mipmap/manage_bookings" />

    <TextView
        android:id="@+id/tvRequestPayment"
        android:text="Request a payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvManageBooking"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/request_a_payment"
        app:drawableStartCompat="@mipmap/request_a_payment" />

    <TextView
        android:id="@+id/tvCancelTrip"
        android:text="Cancel Trip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestPayment"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/cancel_the_trip"
        app:drawableStartCompat="@mipmap/cancel_the_trip" />

    <TextView
        android:id="@+id/tvShareTrip"
        android:text="Share Trip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCancelTrip"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/share_trip"
        app:drawableStartCompat="@mipmap/share_trip" />

    <TextView
        android:id="@+id/tvManageNotification"
        android:text="Manage notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShareTrip"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/manage_notification"
        app:drawableStartCompat="@mipmap/manage_notification" />

    <TextView
        android:id="@+id/tvCancel"
        android:background="?attr/selectableItemBackground"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvManageNotification"
        style="@style/ActionItem"
        app:drawableLeftCompat="@mipmap/cancel_the_trip"
        app:drawableStartCompat="@mipmap/cancel_the_trip" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>