<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/widget_margin_left_right"
    android:background="@drawable/top_side_round_conner">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/edit" />

            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/manage_participants" />

            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/manage_bookings" />
            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/request_a_payment" />
            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/cancel_the_trip" />
            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/share_trip" />
            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/manage_notification" />
            <ImageView
                style="@style/ActionItemIcon"
                android:src="@mipmap/cancel_the_trip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEditTrip"
                style="@style/ActionItem"
                android:background="?attr/selectableItemBackground"
                android:text="Edit trip settings" />


            <TextView
                android:id="@+id/tvManageParticipants"
                style="@style/ActionItem"
                android:text="Manage participants"/>

            <TextView
                android:id="@+id/tvManageBooking"
                style="@style/ActionItem"
                android:background="?attr/selectableItemBackground"
                android:text="Manage booking"/>

            <TextView
                android:id="@+id/tvRequestPayment"
                style="@style/ActionItem"
                android:background="?attr/selectableItemBackground"
                android:text="Request a payment" />

            <TextView
                android:id="@+id/tvCancelTrip"
                style="@style/ActionItem"
                android:background="?attr/selectableItemBackground"
                android:text="Cancel Trip"/>

            <TextView
                android:id="@+id/tvShareTrip"
                style="@style/ActionItem"
                android:background="?attr/selectableItemBackground"
                android:text="Share Trip" />

            <TextView
                android:id="@+id/tvManageNotification"
                style="@style/ActionItem"
                android:background="?attr/selectableItemBackground"
                android:text="Manage notification" />

            <TextView
                android:id="@+id/tvCancel"
                style="@style/ActionItem"
                android:background="?attr/selectableItemBackground"
                android:text="Cancel" />
        </LinearLayout>


    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>