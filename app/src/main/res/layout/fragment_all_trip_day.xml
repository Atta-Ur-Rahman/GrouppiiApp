<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.tripDetialScreen.AllTripDayFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAllTripDay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/widget_margin"
        android:paddingBottom="100dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarView" />


    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/widget_margin"
        android:paddingBottom="@dimen/widget_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:selectedDateBackground="@drawable/round_calender_background"
        android:layout_marginTop="@dimen/widget_margin"
        app:textColorNormal="@color/gry_app_color"
        app:selectorColor="@android:color/transparent"
        app:textColorSelected="@color/white" />


    <com.vivekkaushik.datepicker.DatePickerTimeline
        android:id="@+id/datePickerTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_margin_left_right"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/widget_margin_left_right"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTripDayNotFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Trip Day Not Found"
        android:textSize="@dimen/main_heading_text_size"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarView" />

</androidx.constraintlayout.widget.ConstraintLayout>